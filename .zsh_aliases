alias ez="vim ~/.zshrc"

alias doc="docker"
alias dock="doc"
alias co="docker-compose"

alias art="php artisan"
alias tinker="php artisan tinker"

alias phpunit="./vendor/bin/phpunit"
alias rt="phpunit --no-coverage"
alias rtf="phpunit --no-coverage --filter"

alias py="python"
alias 3="python3"

# Django Aliases
alias rs="python manage.py runserver"

# Git
alias gs="git status"
alias gcm="git commit -m"
alias gcam="git commit -am"
alias wip='git add --all && git commit -m "wip"'
alias ff="git merge --ff-only"
alias sam="git merge $1 --squash"
alias reb="git rebase -i"
alias glog="git log --graph --oneline"
alias reset="git checkout --"
alias branches="git branch -a | cat"
alias delete="git branch -D"
alias deleter="git push origin --delete"
alias gu="git fetch origin $1:$1"
alias gdn="gd --name-status $1"
alias gdnp="gdn HEAD^ HEAD"

# Utils
alias ctest="ping 8.8.8.8"
